<UserControl x:Class="MyAgario.AgarioControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Background="Black"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Canvas x:Name="MainCanvas" RenderTransformOrigin="0.5,0.5" >
            <Canvas.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="TranslateTransform"/>
                    <ScaleTransform x:Name="ScaleTransform" />
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <TextBlock x:Name="PrintLabel" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock x:Name="ZoomLabel"  VerticalAlignment="Bottom"  HorizontalAlignment="Left" Margin="3"/>
        <TextBlock x:Name="ErrorLabel" Foreground="DarkViolet" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold"/>
    </Grid>
</UserControl>
