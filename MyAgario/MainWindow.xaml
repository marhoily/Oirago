<Window x:Class="MyAgario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAgario"
        KeyDown="MainWindow_OnKeyDown"
        mc:Ignorable="d" Loaded="MainWindow_OnLoaded"
        Title="MainWindow" Height="350" Width="525">
    <Canvas x:Name="_canvas" RenderTransformOrigin="0.5,0.5" SizeChanged="_canvas_OnSizeChanged">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="_scale" ScaleX="2" ScaleY="2"/>
                <TranslateTransform  x:Name="_tanslate"  X="1" Y="1"/>
            </TransformGroup>
        </Canvas.RenderTransform>
    </Canvas>
</Window>
