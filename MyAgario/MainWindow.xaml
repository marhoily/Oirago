<Window x:Class="MyAgario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MouseWheel="MainWindow_OnMouseWheel"
        mc:Ignorable="d" Loaded="MainWindow_OnLoaded"
        Title="MainWindow" Width="815" Height="637">
    <Grid x:Name="Border" >
        <Canvas>
            <Canvas x:Name="Inner" RenderTransformOrigin="0.5,0.5" >
                <Canvas.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform x:Name="TranslateTransform"/>
                        <ScaleTransform x:Name="ScaleTransform" />
                    </TransformGroup>
                </Canvas.RenderTransform>
            </Canvas>
            <TextBlock x:Name="PrintLabel"
                       Canvas.Left="18"
                       Canvas.Top="90"/>
        </Canvas>
        <TextBlock x:Name="ZoomLabel" 
                   VerticalAlignment="Bottom" 
                   HorizontalAlignment="Left" Margin="3"/>
        <TextBlock x:Name="ErrorLabel" VerticalAlignment="Top"
                   HorizontalAlignment="Center" Foreground="DarkViolet"
                   FontWeight="Bold"/>
    </Grid>
</Window>
