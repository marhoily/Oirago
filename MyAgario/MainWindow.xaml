<Window x:Class="MyAgario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MouseWheel="MainWindow_OnMouseWheel"
        mc:Ignorable="d" Loaded="MainWindow_OnLoaded"
        Title="MainWindow" Width="815" Height="637">
    <Grid x:Name="Container" >
        <Canvas x:Name="MainCanvas" RenderTransformOrigin="0.5,0.5" >
            <Canvas.RenderTransform>
                <TransformGroup>
                    <TranslateTransform x:Name="TranslateTransform"/>
                    <ScaleTransform x:Name="ScaleTransform" />
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <TextBlock x:Name="PrintLabel" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock x:Name="ZoomLabel"  VerticalAlignment="Bottom"  HorizontalAlignment="Left" Margin="3"/>
        <TextBlock x:Name="ErrorLabel" Foreground="DarkViolet" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold"/>
    </Grid>
</Window>
